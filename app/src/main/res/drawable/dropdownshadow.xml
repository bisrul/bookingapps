<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#20000000" /> <!-- Set the desired shadow color -->
            <corners android:radius="12dp" /> <!-- Set the desired corner radius -->
        </shape>
    </item>

    <!-- Rounded Shape Layer -->
    <item
        android:top="4dp"
    android:right="4dp"
    android:bottom="8dp"
    android:left="4dp">
    <shape>
        <solid android:color="#FFFFFF" /> <!-- Set the desired background color -->
        <corners android:radius="12dp" /> <!-- Set the desired corner radius -->
    </shape>
</item>

    </layer-list>
