        <!-- Add your CardView content here -->



    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded10_background"
        android:elevation="10dp"
        android:padding="30dp"

        >
        <TextView
            android:id="@+id/welcome_bac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="Welcome Back!"
            android:gravity="center|top"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/textdark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/don_t_have_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal|top"
                android:text="Don't have account?"
                android:textColor="@color/textgrey"
                android:textSize="10dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_horizontal|top"
                android:text="Sign Up"
                android:textColor="@color/ungu"
                android:textSize="10dp" />

        </LinearLayout>

        <View
            android:id="@+id/line_1"
            android:layout_width="200dp"
            android:layout_height="0.15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:background="@color/textgrey" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="17dp"

            >

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Username"
                android:textSize="12dp"
                android:gravity="top"
                android:textColor="@color/textdark"
                android:fontFamily="@font/poppins_light"
                />

            <EditText
                android:id="@+id/emailfill"
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text=""
                android:paddingLeft="10dp"
                android:fontFamily="@font/poppins_light"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded6_textfill"
                android:textColor="@color/textdark"
                android:inputType="textEmailAddress"
                />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Password"
                android:textSize="12dp"
                android:textColor="@color/textgrey"
                android:fontFamily="@font/poppins_light"
                android:gravity="top"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/passwordfill"
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text=""
                android:paddingLeft="10dp"
                android:fontFamily="@font/poppins_light"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded6_textfill"
                android:textColor="@color/textdark"
                android:inputType="textPassword"
                />

            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="Forget your password?"
                android:textColor="@color/ungu"
                android:fontFamily="@font/poppins_light"
                android:textSize="10dp"
                android:gravity="top"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>

       <Button
           android:layout_width="235dp"
           android:layout_height="35dp"
           android:id="@+id/login"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_alignParentBottom="true"
           android:text="LOGIN"
           android:textColor="@color/textwhite"
           android:fontFamily="@font/poppins_semibold"
           android:textStyle="bold"
           android:gravity="center"
           android:background="@drawable/rounded10_button"
           android:textSize="12dp"
           android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/terms"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="By using our service you aggree our terms and conditions. For any assistance please visit help desk"
            android:gravity="center_horizontal|top"
            android:fontFamily="@font/poppins_light"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>